<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="aydin.firebasedemo.WelcomeController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="400" prefHeight="300">
            <Label text="Welcome To FireBase Demo" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <HBox alignment="CENTER" spacing="15">
                <Button text="Register" onAction="#onRegisterClicked" />
                <Button text="Sign In" onAction="#onSignInClicked" />
            </HBox>
        </VBox>
    </children>


</AnchorPane>
