<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aydin.firebasedemo.PrimaryController"
            prefWidth="600" prefHeight="400">
    <children>
        <VBox alignment="CENTER" layoutX="20" layoutY="20" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
            <Label text="CSC325-SW Engineering Student: check out the console window for the output messages..." />
                <TextField fx:id="nameTextField" promptText="name" />
                <TextField fx:id="ageTextField" promptText="age" />
                <TextField fx:id="phoneTextField" promptText="phone" />
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="readButton" text="Read" onAction="#readButtonClicked"/>
                    <Button fx:id="writeButton" text="Write" onAction="#writeButtonClicked"/>
                    <Button fx:id="addPersonButton" text="Add Person" onAction="#addPersonButtonClicked"/>
                </HBox>
                <TextArea fx:id="outputTextArea" prefHeight="218.0" prefWidth="507.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>
